        </div>  
        <!-- <i class="lm-ui-result-loading mdi mdi-reload" v-if="loadingResult"></i> -->
        <codemirror
          class="lm-editor"
          ref="res_cm"
          v-model="jsonCode"
          :options="cmResultOption"
        ></codemirror>
      </div>
